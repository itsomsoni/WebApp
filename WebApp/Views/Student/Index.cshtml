@model List<StudentModel>

@section title {
    <h2 class="float-start">Students List</h2>
    <a class="btn btn-primary float-end" asp-controller="Student" asp-action="AddStudent">Add New</a>
}

@if (Model != null)
{
    <table class="table table-bordered table-hover p-0 m-0">
        <thead>
            <tr>
                <td>Name</td>
                <td>Email Address</td>
                <td>Phone</td>
                <td>Address</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5" class="fw-bold text-danger text-center">No Record Found</td>
                </tr>
            }
            else
            {
                foreach (var Data in Model)
                {
                    <tr>
                        <td>@Data.StudentName</td>
                        <td>@Data.StudentEmail</td>
                        <td>@Data.StudentPhone</td>
                        <td>@Data.StudentAddress</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="Student" asp-action="EditStudent" asp-route-id="@Data.StudentId">Edit</a>
                            <a class="btn btn-primary" asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@Data.StudentId"
                            onclick="return confirm('Are you sure want to delete?')">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
